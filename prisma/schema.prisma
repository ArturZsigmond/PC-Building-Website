generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int               @id @default(autoincrement())
  email    String            @unique
  password String
  role     String
  builds   Build[]
  logs     Log[]
  monitoredBy MonitoredUser? @relation("MonitoredRelation")
}


model Build {
  id     Int    @id @default(autoincrement())
  cpu    String
  ram    String
  gpu    String
  case   String
  price  Int
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}

model Log {
  id        Int      @id @default(autoincrement())
  action    String
  timestamp DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model MonitoredUser {
  id     Int    @id @default(autoincrement())
  userId Int    @unique
  reason String
  user   User   @relation("MonitoredRelation", fields: [userId], references: [id])
}

